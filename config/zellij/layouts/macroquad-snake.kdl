layout {
  default_tab_template {
    pane size=1 borderless=true {
      plugin location="zellij:compact-bar"
    }
    children
  }
  tab name="vim" cwd="~/Repos/@rust/macroquad-snake/" focus=true {
    pane edit="." borderless=true
  }
  tab name="term" cwd="~/Repos/@rust/macroquad-snake/" split_direction="vertical" {
    pane name="git"
    pane name="cargo"
  }
}
