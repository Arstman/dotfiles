" General Settings
set update.lastchecktime 1691049369504
set update.nag true
set update.nagwait 7
set update.lastnaggedversion 1.14.0
set update.checkintervalsecs 86400
set configversion 2.0
set newtab about:blank
set profiledir /home/rg/.mozilla/firefox/lysl9wik.default-release
set theme sijink
set hintchars fjdksla;
set editorcmd /usr/bin/alacritty -e /usr/bin/nvim '+normal!%lGzv%c|'

" Binds

""""""""""""""""""""""""""""""""""""""" General
bind <F1> help
set newtab about:blank
" disable tridactyl for current site
bind <S-Escape> mode ignore
bind . repeat
bind ge editor
" enter command mode
bind : fillcmdline_notrail
bind r reload
" reopen most recently closed tab
bind u undo
" reopen most recently closed window
bind U undo window
" focus last focused input
bind gi focusinput -l
" Not sure which unbinds are needed and which aren't, but they don't hurt
unbind <C-l>
unbind <C-f>
unbind Escape
unbind <Escape>
unbind <C-j>
unbind <C-k>
unbind <C-a>
bind --mode=ex <C-j> ex.next_completion
bind --mode=ex <C-k> ex.prev_completion

""""""""""""""""""""""""""""""""""""""" Scrolling
bind h scrollpx -50
bind j scrollline 10
bind k scrollline -10
bind l scrollpx 50
bind <C-u> scrollpage -0.5
bind <C-d> scrollpage 0.5
bind gg scrollto 0
bind G scrollto 100
bind ^ scrollto 0 x
bind $ scrollto 100 x

""""""""""""""""""""""""""""""""""""""" Finding
bind / fillcmdline find
bind ? fillcmdline find --reverse
bind n findnext --search-from-view
bind N findnext --search-from-view --reverse
bind gk findselect
 " same as findselect but backwards
bind gK composite findnext --search-from-view --reverse; findselect
bind g/ nohlsearch

""""""""""""""""""""""""""""""""""""""" Tabs
bind J tabprev
bind K tabnext
bind <A-p> pin
bind <A-m> mute toggle
bind << tabmove -1
bind >> tabmove +1
bind g^ tabfirst
bind g0 tabfirst
bind g$ tablast
 " Jumps to the tab that plays audio
bind ga tabaudio
bind x tabclose
 " close tab and go to left
bind X composite tabprev; tabclose #
 " ~fzf for tabs
bind t fillcmdline tab
 " ~fzf for tabs of all windows
bind T fillcmdline taball
" ~fzf for bookmarks
bind b composite js -r geturl.js | exclaim_quiet echo > /tmp/new_bookmark; composite js -r gettitle.js | exclaim_quiet echo >> /tmp/new_bookmark; exclaim_quiet cat ~/.cache/new_bookmark >> /tmp/new_bookmark; exclaim_quiet alacritty -e nvim /tmp/new_bookmark &

""""""""""""""""""""""""""""""""""""""" Navigation
bind p clipboard open
bind P clipboard tabopen
bind <C-o> jumpprev
bind <C-i> jumpnext
" search
bind s fillcmdline open search
bind S fillcmdline tabopen search
bind <A-s> fillcmdline winopen search
" history and bookmarks
bind a fillcmdline open
bind A fillcmdline tabopen
bind <A-a> fillcmdline winopen
" current url
bind o current_url open
bind O current_url tabopen
bind <A-o> current_url winopen

bind gu urlparent
bind gU urlroot
bind [c urlincrement -1
bind ]c urlincrement 1

""""""""""""""""""""""""""""""""""""""" History
bind H back
bind L forward

""""""""""""""""""""""""""""""""""""""" Zoom
bind zi zoom 0.1 true
bind zo zoom -0.1 true
bind zM zoom 0.5 true
bind zR zoom -0.5 true
bind zz zoom 1
bind zI zoom 3
bind zO zoom 0.3

""""""""""""""""""""""""""""""""""""""" Clipboard
bind yy clipboard yank
bind ys clipboard yankshort
bind yc clipboard yankcanon
bind ym clipboard yankmd
bind yt clipboard yanktitle

""""""""""""""""""""""""""""""""""""""" Hint
" -q means stay in hint mode

bind f hint
" open in a new tab
bind F hint -b
bind ;gF hint -qb
" no javascript
bind ;j hint -J
bind ;gj hint -qJ
" image
bind ;i hint -i
bind ;gi hint -qi
" image in new tab
bind ;I hint -I
bind ;gI hint -qI
" delete element
bind ;k hint -k
bind ;gk hint -qk
" hide element
bind ;K hint -K
bind ;gK hint -qK
" yank link to clipboard
bind ;y hint -y
" yank text to clipboard
bind ;p hint -p
" select an element's text?
bind ;h hint -h
" yank element's title / alt text to clipboard
bind ;P hint -P
" download linked resource
bind ;s hint -s
bind ;gs hint -qs
" download linked image
bind ;S hint -S
bind ;gS hint -qS
" save-as the linked resource
bind ;v hint -a
" save-as the linked image
bind ;V hint -A
" select element to scroll
bind ;; hint -; *
" yank element's anchor to clipboard
bind ;# hint -#
" scroll element to top of viewport
bind ;z hint -z

