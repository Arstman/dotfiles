### PROGRAMS ###
# Browser
super + w
	$BROWSER

# Discord
super + c
	discord

# File browser
super + f
	alacritty -e n

# Music player
super + n
	alacritty -e ncmpcpp -s browser

### MEDIA ###
# Volume up
super + bracketright
	volumectl up

# Volume down
super + bracketleft
	volumectl down

# Mute / unmute
super + m
	volumectl mute

# Next track
super + control + bracketright
	mpc next

# Prev track
super + control + bracketleft
	mpc prev

# Stop / play
super + control + m
	mpc toggle

# Toggle repeat

# Seek forward
super + shift + bracketright
	mpc seek +00:00:10

# Seek backward
super + shift + bracketleft
	mpc seek -00:00:10

# Playlist menu
super + F8
	playlistmenu

### SCREENS ###
# Increase brightness
super + apostrophe
	lightctl up

# Decrease brightness
super + semicolon
	lightctl down

# Display menu
super + F11
	displaymenu

# Take screenshot of both screens
Print
 	screenshot

# Take screenshot on selected area
super + Print
	screenshot select

# Take screenshot of monitor 1
super + control + F1
 	screenshot 1

# Take screenshot of monitor 2
super + control + F2
	screenshot 2


### MISC STUFF ###
# Layout menu
super + backslash
	keyboardctl menu

# Shutdown menu
super + F12
	shutdownmenu

# Mount menu
super + F10
	mountmenu

# Youtube-dl menu
super + F9
	ytdlmenu "$(xclip -o)"

# Theme selector menu
super + F7
	thememenu
