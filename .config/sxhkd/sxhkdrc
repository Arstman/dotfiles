# Programs {{{
# Browser
super + w
	$BROWSER

# File browser
super + f
	alacritty -t nnn -e nnn

# Discord
super + c
	staticapp -s -t 7 -a discord

# Music player
super + n
	staticapp -t 8 -a ncmpcpp

# E-mail client
super + o
	staticapp -t 9 -a neomutt
#}}}

# Media {{{
# Volume up
super + bracketright
	volume up

# Volume down
super + bracketleft
	volume down

# Mute / unmute
super + m
	volume mute

# Next track
super + control + bracketright
	mpc next

# Prev track
super + control + bracketleft
	mpc prev

# Stop / play
super + control + m
	mpc toggle

# Toggle repeat

# Seek forward
super + shift + bracketright
	mpc seek +00:00:10

# Seek backward
super + shift + bracketleft
	mpc seek -00:00:10
# }}}

# Brightness {{{
# Increase brightness
super + apostrophe
	brightness up

# Decrease brightness
super + semicolon
	brightness down
#}}}

# Opacity {{{
# Increase opacity
super + control + apostrophe
	setopacity up

# Decrease opacity
super + control + semicolon
	setopacity down

# }}}

# Screenshots {{{
# Take screenshot of both screens
Print
 	screenshot

# Take screenshot on selected area
super + Print
	screenshot select

# Take screenshot of monitor 1
super + control + F1
 	screenshot 1

# Take screenshot of monitor 2
super + control + F2
	screenshot 2
#}}}

# Menus {{{
# Shutdown menu
super + F12
	shutdownmenu

# Display menu
super + F11
	displaymenu

# Mount menu
super + F10
	mountmenu

# Youtube-dl menu
super + F9
	ytdlmenu "$(xclip -o)"

# Playlist menu
super + F8
	playlistmenu

# Theme selector menu
super + F7
	schememenu

# Layout menu
super + F6
	keyboardctl menu
# }}}

# vim: foldcolumn=2 foldmethod=marker
