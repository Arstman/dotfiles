#!/bin/sh

tmr=$(transmission-remote -l | tail -n 1)

dn=$(echo $tmr | awk '{if($5 > 0) printf "%iKB/s", $5}')
up=$(echo $tmr | awk '{if($4 > 0) printf "%iKB/s", $4}')

if [ -n "$dn" ] || [ -n "$up" ]; then
    [ -z "$dn" ] && dn="-"
    [ -z "$up" ] && up="-"
    symbol="ó°“¢"
    pangoify -s -c 11 -t "$symbol"
    pangoify -c 3 -t " $up"
    pangoify -c 3 -t " $dn"
    printf "   "
fi
