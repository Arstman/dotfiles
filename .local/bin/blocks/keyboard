#!/bin/sh

current=$(setxkbmap -print | grep xkb_symbols | sed "s/^.*pc+//;s/+.*$//")
icon="ó°ŒŒ"

case "$current" in
    "us(cmk_ed_us)")
	pangoify -s -c "color.bg_flavor" -t "$icon"
	pangoify -c "color.fg_flavor" -t " CL"
	printf "    "
	;;
    "hu(102_qwerty_dot_nodead)")
	pangoify -s -c "color.bg_flavor" -t "$icon"
	pangoify -c "color.fg_flavor" -t " HU"
	printf "    "
	;;
    *)
	printf '\0'
	;;
esac
